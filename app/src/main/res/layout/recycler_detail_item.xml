<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/image_detailitem_userhead"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="26dp"/>

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_detailitem_username"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/color_NBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_detailitem_time"
                android:textSize="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_detailitem_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/image_detailitem_like"
                    android:layout_marginRight="5dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/like"/>
                <TextView
                    android:id="@+id/tv_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_detailitem_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp">
                <ImageView
                    android:id="@+id/image_detailitem_comment"
                    android:layout_marginRight="5dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/comment"/>
                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_detailitem_comment"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="58dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>