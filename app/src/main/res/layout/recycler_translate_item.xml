<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_translate_item"
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_translate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="I have a dream"
            android:textColor="@color/color_NBlack"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/text_translate_date"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="23dp"
            android:text="2016.09"
            android:textColor="@color/color_NBlack"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_translate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:text="这里是一段译文"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right|center_vertical"
        >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/share"/>

        <TextView
            android:id="@+id/text_translate_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="8"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/comment"/>

        <TextView
            android:id="@+id/text_translate_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="562"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/like"/>

        <TextView
            android:id="@+id/text_translate_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="23dp"
            android:text="452"/>

    </LinearLayout>
</LinearLayout>